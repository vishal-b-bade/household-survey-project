<%- include("../layouts/header.ejs") %>
<%- include("../layouts/nav.ejs") %>

<form method="post">
  <div class="col-md-6 mx-auto mt-4 p-4 pt-0 bg-dark rounded">
    <h1 class="display-1 mb-3 bg-warning-subtle rounded-bottom">
      People Survey Form
    </h1>

    <div class="row g-3 form-floating">
      <div class="form-floating mb-3 col-sm-4">
        <input
          type="number"
          class="form-control"
          id="familyId"
          name="familyId"
          placeholder="Family ID"
          required
        />
        <label for="familyId"
          >Family ID<span class="text-danger">*</span></label
        >
      </div>
      <div class="form-floating col-sm-8">
        <input
          type="text"
          class="form-control"
          id="fullName"
          name="fullName"
          placeholder="Full Name"
          required
        />
        <label for="fullName"
          >Full Name<span class="text-danger">*</span></label
        >
      </div>
    </div>

    <div class="row g-3 mb-3">
      <div class="col-md-4 form-floating">
        <input
          type="number"
          id="age"
          class="form-control"
          name="age"
          placeholder="Age"
          aria-label="Age"
          required
        />
        <label for="age">Age<span class="text-danger">*</span></label>
      </div>
      <div class="col-md-4">
        <select
          class="form-select py-3"
          name="gender"
          aria-label="Gender*"
          required
        >
          <option value="">Gender</option>
          <option value="Male">Male</option>
          <option value="Female">Female</option>
          <option value="Other">Other</option>
        </select>
      </div>
    </div>

    <div class="row g-3">
      <div class="col-md-4 form-floating">
        <input
          type="tel"
          class="form-control"
          id="mobileNo"
          name="mobileNo"
          placeholder="Mobile Number"
          aria-label="MobileNo"
        />
        <label for="mobileNo">Mobile Number</label>
      </div>
      <div class="col-md-4 mb-3 form-floating">
        <input
          type="tel"
          class="form-control"
          id="abha"
          name="abha"
          placeholder="Abha ID"
          aria-label="abha"
        />
        <label for="abha">Abha ID</label>
      </div>
      <div class="col-md-4 form-floating">
        <input
          type="number"
          class="form-control"
          id="ayushman"
          name="ayushman"
          placeholder="Ayushman ID"
          aria-label="ayushman"
        />
        <label for="ayushman">Ayushman ID</label>
      </div>
    </div>

    <div class="row g-3 mb-3">
      <div class="col-md-6 form-floating">
        <input
          type="text"
          class="form-control"
          id="relation"
          name="relation"
          placeholder="Relation with head of family"
          aria-label="Relation"
          required
        />
        <label for="relation"
          >Relation with head of family<span class="text-danger">*</span></label
        >
      </div>
    </div>

    <div class="d-grid col-md-12 mt-5">
      <button class="btn btn-primary" type="submit">Submit</button>
    </div>
  </div>
</form>

<%- include("../layouts/footer.ejs") %>
