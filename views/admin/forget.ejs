<%- include("../layouts/header.ejs") %>

<div class="container mt-5">
  <h1 class="text-center">Admin Login Page</h1>
  <div class="row justify-content-center mt-5">
    <div class="col-md-6">
      <% if(typeof message !== 'undefined') { %>
        <h4 class="text-danger"><%= message %></h4>
      <% } %>

      <form action="/admin/forget" method="post">
        <div class="form-group">
          <label for="email">Email:</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            placeholder="Enter Email"
            required
          />
        </div>
        <button type="submit" class="btn btn-primary">Send Verification Mail</button>
      </form>

      <% if(typeof message2 !== 'undefined') { %>
        <h4 class="text-success mt-3"><%= message2 %></h4>
      <% } %>
    </div>
  </div>
</div>

<%- include("../layouts/footer.ejs") %>
