<%- include("../layouts/header.ejs") %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center mb-5">User Login Page</h1>

      <% if(typeof message2 !== 'undefined') { %>
        <h4 style="color: red"><%= message2 %></h4>
      <% } %>
      <% if(typeof message1 !== 'undefined') { %>
        <h4 style="color: green"><%= message1 %></h4>
      <% } %>

      <form action="/user" method="post">
        <div class="form-group">
          <label for="email">Email:</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            placeholder="Enter Email"
            required
          />
        </div>
        <div class="form-group">
          <label for="password">Password:</label>
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
            placeholder="Enter Password"
            required
          />
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
      </form>
      <br />
      <a href="/user/forget">Forget password?</a>
      <br /><br />
      <a href="/user/verification">Email verify</a>
    </div>
  </div>
</div>

<%- include("../layouts/footer.ejs") %>
